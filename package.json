{
  "scripts": {
    "test": "jest --reporters=jest-junit",
    "build": "echo \"Dummy build script for Autocode\"",
    "comp:watch": "sass --watch src/styles/styles.scss:src/dist/styles.css --no-source-map",
    "compile": "sass src/styles/styles.scss:src/dist/styles.css --no-source-map",
    "prefixer": "npx postcss src/dist/styles.css -o src/dist/styles.css --use autoprefixer",
    "minifying": "postcss src/dist/styles.css -o src/dist/styles.min.css",
    "remove-unused": "purgecss --css src/dist/styles.css --content src/index.html",
    "lint": "stylelint ./src/styles/*.scss --fix && stylelint ./src/styles/*.scss",
    "prod": "npm run compile && npm run prefixer && npm run minifying && npm run remove-unused && npm run lint"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "html-validate": "^8.7.4",
    "jest": "29.7",
    "jest-junit": "^13.2.0",
    "jsdom": "^19.0.0",
    "parse-gitignore": "^2.0.0",
    "postcss": "^8.5.4",
    "postcss-cli": "^11.0.1",
    "purgecss": "^7.0.2",
    "sass": "^1.89.2",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0"
  },
  "jest-junit": {
    "suiteName": "junit test results",
    "outputDirectory": ".",
    "outputName": "junit.xml"
  }
}
